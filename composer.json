{
    "name": "sortedlinkedlist/library",
    "description": "A sorted linked list library for PHP that maintains elements in sorted order",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Developer",
            "email": "developer@example.com"
        }
    ],
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan-strict-rules": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "SortedLinkedList\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SortedLinkedList\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src tests --level=8",
        "phpcs": "phpcs src tests --standard=PSR12",
        "phpcbf": "phpcbf src tests --standard=PSR12",
        "quality": [
            "@phpcs",
            "@phpstan",
            "@test"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}